<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>bin</id>
  <formats>
    <format>tgz</format>
  </formats>
  <baseDirectory>ade-${project.version}</baseDirectory>
  <includeBaseDirectory>true</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>org.openmainframe.ade:ade-ext</include>
        <include>org.openmainframe.ade:ade-core</include>
      </includes>
      <binaries>
        <outputDirectory>lib</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <directory>src/main/scripts</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
      <excludes>
        <exclude>env.sh</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src/main/conf</directory>
      <outputDirectory>conf</outputDirectory>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/conf/xml</directory>
      <outputDirectory>conf/xml</outputDirectory>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/test</directory>
      <outputDirectory>bin/test</outputDirectory>
      <fileMode>0755</fileMode>
      <excludes>
        <exclude>test.props</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src/main/baseline</directory>
      <outputDirectory>baseline</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/samples</directory>
      <outputDirectory>samples</outputDirectory>
      <fileMode>0644</fileMode>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/main/scripts/env.sh</source>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0644</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/test/test.props</source>
      <outputDirectory>bin/test</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
  </files>
</assembly>
